@import 'nib'
 
.dotnavbar  
    position: absolute
    right: 10px
    display: block
    background-color: inherit
    border-radius: 10px

    ul
        reset-box-model()
        list-style: none

    a
        position: relative
        display: block
        width: 10px
        height: 10px
        margin: 40px 10px
        color: #333
        text-decoration: none

        &:before
            content: ""
            display: block
            width: 10px
            height: 10px
            background-color: #666
            border-radius: 10px
            transition: transform 1s

    span
        position: absolute
        right: 34px
        float: right
        top: -5px
        opacity: 0.0
        margin-right: 16px
        transition: opacity 0.3s, margin 0.3s linear
        visibility: hidden

    .active
        &:before
            background-color: #F66
        
    .hover
        &:before
            transform: scale(1.7)
            background-color: #08f
        span
            right: 34px
            opacity: 1.0
            margin: 0
            visibility: visible


.topnavbar
    padding: 10px
    background-color: rgba(255, 0, 0, 0.5)

    ul
        reset-box-model()
        clearfix()
        list-style: none

    li
        float: left

    a
        display: block
        margin: 5px
        padding: 10px 30px
        color: white
        text-decoration: none
        border-radius: 10px
        border: 1px solid white

    .hover
        background-color: #333
        border-color: rgba(255, 0, 0, 0.5)

    .active
        background-color: #333
        border-color: rgba(255, 0, 0, 0.5)