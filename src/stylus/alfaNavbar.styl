@import 'nib'
 
.alfaDotNavbar  
    position: absolute
    right: 10px

    ul
        reset-box-model()
        list-style: none

    a
        position: relative
        display: block
        width: 10px
        height: 10px
        margin: 40px 10px
        color: #333
        text-decoration: none

        &:before
            content: ""
            position: absolute
            display: inline-block
            width: 10px
            height: 10px
            background-color: #666
            border-radius: 50%
            transition: transform 1s
            
        &:hover:before
            transform: scale(1.6)
            background-color: #08f
            
        &:hover span
            margin: 0
            visibility: visible

    span
        position        : absolute
        right           : 30px
        width           : 300px
        height          : 10px
        line-height     : 10px
        text-align      : right
        visibility      : hidden
        /* for beautiful */
        bottom          : 3px
        /* animation     */
        margin-right    : 16px
        transition      : margin 0.3s linear

    .active
        &:before
            background-color: #F66